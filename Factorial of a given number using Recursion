#include <stdio.h>

// Recursive function to find factorial
long long factorial(int n) {
    if (n == 0 || n == 1)   // Base case
        return 1;
    else
        return n * factorial(n - 1);  // Recursive step
}

int main() {
    int num;

    // Input number
    printf("Enter a number: ");
    scanf("%d", &num);

    // Display result
    printf("Factorial of %d = %lld\n", num, factorial(num));

    return 0;
}
